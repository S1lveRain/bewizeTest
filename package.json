{
  "name": "@s1lverain/claude-telegram-mcp",
  "version": "1.0.4",
  "description": "Telegram integration for Claude Code via MCP (Model Context Protocol)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-telegram-mcp": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run fix-imports",
    "fix-imports": "node -e \"const fs=require('fs');const p='dist/mcp/mcpServer.js';const c=fs.readFileSync(p,'utf8');fs.writeFileSync(p,c.replace(/@modelcontextprotocol\\/sdk\\/dist\\//g,'@modelcontextprotocol/sdk/'));\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "telegram",
    "claude",
    "bot",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-telegram-bot-api": "^0.66.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.15",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    ".mcp.json"
  ]
}

